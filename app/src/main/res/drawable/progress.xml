<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" />
            <gradient
                android:angle="270"
                android:centerColor="#6a819b81"
                android:centerY="0.75"
                android:endColor="#b1b4b4b4"
                android:startColor="#62898e89" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#1f43e2"
                    android:centerY="0.75"
                    android:endColor="#2034cc"
                    android:startColor="#24afd9" />
            </shape>
        </clip>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/tab_brown"
                    android:startColor="@color/progress_bg" />
            </shape>
        </clip>
    </item>

</layer-list>