<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#070b23">

        <FrameLayout
            android:id="@+id/bck_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



                <ImageView
                    android:id="@+id/layout_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_40sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:src="@drawable/back_ico" />



            <com.rey.material.widget.TextView
                android:id="@+id/tv_hd_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add Shipment"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_22sdp" />




                <ImageView
                    android:id="@+id/layout_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:src="@drawable/plus_ico" />


        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_13sdp"
        android:orientation="horizontal">

        <com.rey.material.widget.Button
            android:id="@+id/button_addpal"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_weight="1"
            android:background="@drawable/login_reg_button"
            android:drawableLeft="@drawable/pal_add_wt_ico"
            android:drawablePadding="@dimen/_4sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="Send to Pal"
            android:textColor="#FFFFFF" />


        <com.rey.material.widget.Button
            android:id="@+id/button_continue"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_weight="1"
            android:background="@drawable/login_reg_button"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableRight="@drawable/back_rt_ico"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="Continue"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/ll3"
        android:layout_below="@id/ll1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>