<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#070b23">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/menu_ico"
            android:padding="10dp" />


        <com.rey.material.widget.TextView
            android:id="@+id/tv_hd_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/ll1"
        android:background="#FFFFFF"
        android:weightSum="3">

        <com.rey.material.widget.Button
            android:id="@+id/btn_dash_ship"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/tab_brown"
            android:drawableLeft="@drawable/lft_btn_1_ico"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:text="Ship your package abroad"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <com.rey.material.widget.Button
            android:id="@+id/btn_dash_deliver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tab_default"
            android:drawableLeft="@drawable/lft_btn_2_ico"
            android:paddingLeft="5dp"
            android:text="Deliver your package"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <com.rey.material.widget.Button
            android:id="@+id/btn_dash_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/tab_default"
            android:drawableLeft="@drawable/lft_btn_3_ico"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Shop online with one address"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll2"></FrameLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_page"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/chat_ico" />

        <ImageView
            android:id="@+id/grp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/chat"
            android:background="@drawable/group_ico" />

        <ImageView
            android:id="@+id/cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cam_ico" />

        <ImageView
            android:id="@+id/receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/cam"
            android:background="@drawable/receive_ico" />

        <ImageView
            android:id="@+id/pkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/receive"
            android:background="@drawable/pkg_ico" />


    </LinearLayout>


    <!-- <include
         android:id="@+id/footer"
         layout="@layout/dash_bottom_tools" />-->
</RelativeLayout>