<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_newbg">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_container"
        android:layout_marginTop="@dimen/_130sdp"
        android:layout_above="@+id/bottom">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.rey.material.widget.Button
            android:id="@+id/button_submit"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_reg_button"
            android:drawableRight="@drawable/arrow_ico"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_20sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:id="@+id/linear_login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.rey.material.widget.TextView
                android:id="@+id/text_dont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Already have an Account?"
                android:textColor="#FFFFFF" />

            <com.rey.material.widget.TextView
                android:id="@+id/text_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Login"
                android:textColor="#d97810" />
        </LinearLayout>

        <com.rey.material.widget.TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/terms"
            android:textColor="#e0e0e0"
            android:textSize="@dimen/_7sdp" />

    </LinearLayout>

</RelativeLayout>