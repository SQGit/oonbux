<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.rey.material.widget.TextView
                android:id="@+id/htext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text=" What to Ship &amp; Where?"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <View
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent" />


            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/backo"
                android:padding="1dp">


                <com.rey.material.widget.Button
                    android:id="@+id/tbtn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ship_ico"
                    android:padding="10dp"
                    android:text="Ship your Luggage"
                    android:textColor="#af7735"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:background="#9b550f" />

                <com.rey.material.widget.Button
                    android:id="@+id/tbtn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/pack_ico"
                    android:padding="10dp"
                    android:text="Send your packages to pal"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/camera" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"

                    android:gravity="center"
                    android:text=" 1."
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text=" Take a picture of What you want to ship/Weight it"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imageViedw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/des" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text=" 2."
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" Select the country of your destination"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>



            <ImageView
                android:id="@+id/imagdfeVaiew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/doller" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"

                    android:gravity="center"
                    android:text=" 3."
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" Request for a pickup/payment"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>




            <ImageView
                android:id="@+id/imagesdfView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/per" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"

                    android:gravity="center"
                    android:text=" 4."
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txt_4_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" We Take it from there"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>



            <com.rey.material.widget.Button
                android:id="@+id/add_btn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/backo"
                android:drawableLeft="@drawable/ship"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="Add Shipment"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>