<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#070b23">

        <FrameLayout
            android:id="@+id/bck_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rey.material.widget.LinearLayout
                android:id="@+id/layout_back"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_ico" />
            </com.rey.material.widget.LinearLayout>


            <com.rey.material.widget.TextView
                android:id="@+id/tv_hd_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Verify Address"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="35dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_frm_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|bottom"
                    android:text="From"
                    android:textColor="@color/text_color"
                    android:textSize="22sp" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color" />
        </LinearLayout>

        <com.rey.material.widget.TextView
            android:id="@+id/tv_shd_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="NO 2,\nWestboag st \n Arizona"
            android:textColor="#424242"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/track"
                    android:gravity="right">


                    <com.rey.material.widget.Button
                        android:id="@+id/btn_on_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:text="Local"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btn_off_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/thumb"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="International"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />
                </LinearLayout>


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_pickup_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|bottom"
                    android:text="Pickup"
                    android:textColor="@color/text_color"
                    android:textSize="22sp" />


                <com.rey.material.widget.Spinner
                    android:id="@+id/spin_one"
                    style="@style/Material.Widget.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="25dp"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:popupBackground="#f5f5f5"
                    android:textColor="#FF616161"
                    android:textSize="13sp"
                    app:spn_arrowSize="0dp"
                    app:spn_dividerHeight="0dp"
                    app:spn_labelEnable="true" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/down_ico" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color" />
        </LinearLayout>

        <com.rey.material.widget.TextView
            android:id="@+id/tv_shd_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="NO 2,\nWestboag st \n Arizona"
            android:textColor="#424242"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/track"
                    android:gravity="right">


                    <com.rey.material.widget.Button
                        android:id="@+id/btn_on_to"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:text="Local"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btn_off_to"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/thumb"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="International"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />
                </LinearLayout>


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_to_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|bottom"
                    android:text="To"
                    android:textColor="@color/text_color"
                    android:textSize="22sp" />


                <com.rey.material.widget.Spinner
                    android:id="@+id/spin_two"
                    style="@style/Material.Widget.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="25dp"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:popupBackground="#f5f5f5"
                    android:textColor="#FF616161"
                    android:textSize="13sp"
                    app:spn_arrowSize="0dp"
                    app:spn_dividerHeight="0dp"
                    app:spn_labelEnable="true" />


                <ImageView
                    android:id="@+id/imageView3s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/down_ico" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color" />
        </LinearLayout>


        <com.rey.material.widget.TextView
            android:id="@+id/tv_shd_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="NO 2,\nWestboag st \n Arizona"
            android:textColor="#424242"
            android:textSize="14sp" />


    </LinearLayout>


    <com.rey.material.widget.Button
        android:id="@+id/button_payment"
        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_reg_button"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/arrow_ico"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Make Payment"
        android:textColor="#FFFFFF" />


</RelativeLayout>