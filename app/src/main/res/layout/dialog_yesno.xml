<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#121323"
        android:gravity="center|center_vertical|center_horizontal"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp">

        <ImageView
            android:id="@+id/nav_header_propic"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/msg_ico" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="Do you want to Logout App ?"
            android:textColor="#424242"
            android:textSize="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cont"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:padding="15dp">

            <com.rey.material.widget.Button
                android:id="@+id/button_yes"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/login_reg_button"
                android:text="Yes"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_18sdp" />

            <com.rey.material.widget.Button
                android:id="@+id/button_no"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/login_reg_button"
                android:text="No"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>