<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#070b23">

        <FrameLayout
            android:id="@+id/bck_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_40sdp"
                android:paddingTop="@dimen/_12sdp"
                android:src="@drawable/back_ico" />


            <com.rey.material.widget.TextView
                android:id="@+id/tv_hd_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Verify Address"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_22sdp" />

        </FrameLayout>
    </LinearLayout>


    <com.rey.material.widget.Button
        android:id="@+id/button_payment"
        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/login_reg_button"
        android:drawableRight="@drawable/arrow_ico"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_16sdp"
        android:text="Make Payment"
        android:textColor="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll1"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_5sdp"
       >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e0e0e0"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingLeft="@dimen/_13sdp"
                android:paddingRight="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/from_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/track"
                            android:gravity="right">


                            <com.rey.material.widget.Button
                                android:id="@+id/btn_on_from"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@android:color/transparent"
                                android:text="Local"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_10sdp" />

                            <com.rey.material.widget.Button
                                android:id="@+id/btn_off_from"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@drawable/thumb"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingRight="@dimen/_4sdp"
                                android:text="International"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_frm_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="5dp"
                            android:gravity="left|bottom"
                            android:text="From"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_19sdp" />


                        <com.rey.material.widget.Spinner
                            android:id="@+id/spin_zero"
                            style="@style/Material.Widget.Spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_23sdp"
                            android:gravity="right"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_18sdp"
                            android:popupBackground="#f5f5f5"
                            android:textColor="#FF616161"
                            android:textSize="@dimen/_11sdp"
                            app:spn_arrowSize="0dp"
                            app:spn_dividerHeight="0dp"
                            app:spn_labelEnable="true" />


                        <ImageView
                            android:id="@+id/from_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:layout_marginBottom="@dimen/_13sdp"
                            android:background="@drawable/down_ico" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_color" />
                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_shd_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="NO 2,Westboag st Arizona"
                    android:textColor="#424242"
                    android:textSize="@dimen/_12sdp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_from_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="NO 2,\nWestboag st \nArizona"
                    android:textColor="#424242"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#e0e0e0"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingLeft="@dimen/_13sdp"
                android:paddingRight="@dimen/_13sdp"
                android:paddingTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/track"
                            android:gravity="right">


                            <com.rey.material.widget.Button
                                android:id="@+id/btn_on_pickup"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@android:color/transparent"
                                android:text="Local"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_10sdp" />

                            <com.rey.material.widget.Button
                                android:id="@+id/btn_off_pickup"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@drawable/thumb"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingRight="@dimen/_4sdp"
                                android:text="International"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_pickup_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="5dp"
                            android:gravity="left|bottom"
                            android:text="Virtual"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_19sdp" />


                        <com.rey.material.widget.Spinner
                            android:id="@+id/spin_one"
                            style="@style/Material.Widget.Spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_23sdp"
                            android:gravity="right"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_18sdp"
                            android:popupBackground="#f5f5f5"
                            android:textColor="#FF616161"
                            android:textSize="@dimen/_11sdp"
                            app:spn_arrowSize="0dp"
                            app:spn_dividerHeight="0dp"
                            app:spn_labelEnable="true" />


                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:layout_marginBottom="@dimen/_13sdp"
                            android:background="@drawable/down_ico" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_color" />
                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_shd_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="NO 2,\nWestboag st \nArizona"
                    android:textColor="#424242"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#e0e0e0"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_13sdp"
                android:paddingRight="@dimen/_13sdp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/track"
                            android:gravity="right">


                            <com.rey.material.widget.Button
                                android:id="@+id/btn_on_to"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@android:color/transparent"
                                android:text="Local"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_10sdp" />

                            <com.rey.material.widget.Button
                                android:id="@+id/btn_off_to"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@drawable/thumb"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingRight="@dimen/_4sdp"
                                android:text="International"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_to_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:gravity="left|bottom"
                            android:text="To"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_19sdp" />


                        <com.rey.material.widget.Spinner
                            android:id="@+id/spin_two"
                            style="@style/Material.Widget.Spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_23sdp"
                            android:gravity="right"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_18sdp"
                            android:popupBackground="#f5f5f5"
                            android:textColor="#FF616161"
                            android:textSize="@dimen/_13sdp"
                            app:spn_arrowSize="0dp"
                            app:spn_dividerHeight="0dp"
                            app:spn_labelEnable="true" />


                        <ImageView
                            android:id="@+id/imageView3s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:layout_marginBottom="@dimen/_13sdp"
                            android:background="@drawable/down_ico" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_color" />
                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_shd_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="NO 474,\nNorth caroloina st \nBrizbane"
                    android:textColor="#424242"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>