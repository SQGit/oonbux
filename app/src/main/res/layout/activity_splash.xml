<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Splash">


    <include layout="@layout/activity_splash_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_65sdp"
            android:layout_gravity="center">



            <com.rey.material.widget.Button
                android:id="@+id/button_submit"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:background="@drawable/login_reg_button"
                android:drawableRight="@drawable/arrow_ico"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_16sdp"
                android:text="@string/splash_btn_text"
                android:textColor="#FFFFFF" />


            <!--<ProgressBar
                android:layout_width="@dimen/_40sdp"
                android:layout_gravity="center|top"
                android:id="@+id/progressbar"
                android:layout_height="@dimen/_40sdp" />-->


            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avloadingIndicatorView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal|center_vertical|center"
                android:visibility="visible"
                app:indicator="BallScaleMultiple"
                app:indicator_color="#d97912" />




        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
