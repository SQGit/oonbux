<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#070b23">


        <FrameLayout
            android:id="@+id/bck_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_40sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:src="@drawable/back_ico" />



            <com.rey.material.widget.TextView
                android:id="@+id/tv_hd_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Virtual Address"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </FrameLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#f47a20"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/btn_backa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/des" />


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_shd_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="USA"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <GridView
                android:id="@+id/grd_usa"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ll3"
                android:numColumns="2"
                android:overScrollMode="ifContentScrolls"
                android:stretchMode="columnWidth">

            </GridView>


            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/grd_usa"
                android:layout_marginTop="10dp"
                android:background="#f47a20"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/btn_bacdka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/des" />


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_shd_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="NIGERIA"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <GridView
                android:id="@+id/grd_nig"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ll4"
                android:numColumns="2">
            </GridView>
        </RelativeLayout>

    </ScrollView>


    <com.rey.material.widget.Button
        android:id="@+id/button_submit"
        style="@style/Material.Drawable.Ripple.Wave.Light"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/login_reg_button"
        android:drawableRight="@drawable/arrow_ico"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_16sdp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_18sdp" />


</RelativeLayout>