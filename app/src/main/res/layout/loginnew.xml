                    android:visibility="visible"
                    app:indicator="BallSpinFadeLoader"
                    app:indicator_color="#d97912" />



            </FrameLayout>-->


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">


        <com.rey.material.widget.Button
            android:id="@+id/button_login"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_reg_button"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/arrow_ico"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:id="@+id/linear_register_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.rey.material.widget.TextView
                android:id="@+id/textview_footer_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Don't have an Account?"
                android:textColor="#FFFFFF" />

            <com.rey.material.widget.TextView
                android:id="@+id/textview_footer_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Register"
                android:textColor="#d97810" />
        </LinearLayout>

        <com.rey.material.widget.TextView
            android:id="@+id/textview_sub_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/terms1"
            android:textColor="#e0e0e0"
            android:textSize="@dimen/_7sdp" />

    </LinearLayout>

</RelativeLayout>