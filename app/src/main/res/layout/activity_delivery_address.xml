<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash"
    tools:context=".DeliveryAddress">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#070b23">


            <FrameLayout
                android:id="@+id/bck_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.rey.material.widget.LinearLayout
                    android:id="@+id/layout_back"
                    style="@style/Material.Drawable.Ripple.Touch"
                    android:layout_width="80dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/back_ico" />
                </com.rey.material.widget.LinearLayout>


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_hd_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Delivery Address"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

            </FrameLayout>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll21"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#000000">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/loc_wt_ico" />


                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_shd_txt_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Local Delivery Address"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />


                    <com.rey.material.widget.Button
                        android:id="@+id/button_add_loc"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/black_but_add"
                        android:drawableLeft="@drawable/add_ico"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="Add"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="#ef8d23"
                        android:gravity="top">

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/checkbox_local"
                            style="@style/checkbox1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/edittext_loc_address1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Address Line 1"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:textSize="18sp"
                                    app:met_accentTypeface="fonts/prox.otf"
                                    app:met_baseColor="@color/text_divider_light"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="#0f1025"
                                    app:met_primaryColor="@color/text_divider_light"
                                    app:met_textColor="#FFFFFF"
                                    app:met_textColorHint="#f5f5f5"
                                    app:met_underlineColor="@color/text_divider" />

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/edittext_loc_address2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="Address Line 2"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:textSize="18sp"

                                    app:met_accentTypeface="fonts/prox.otf"
                                    app:met_baseColor="@color/text_divider_light"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="#0f1025"
                                    app:met_primaryColor="@color/text_divider_light"
                                    app:met_textColor="#FFFFFF"
                                    app:met_textColorHint="#f5f5f5"
                                    app:met_underlineColor="@color/text_divider" />

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/edittext_loc_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="City"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:textSize="18sp"

                                    app:met_accentTypeface="fonts/prox.otf"
                                    app:met_baseColor="@color/text_divider_light"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="#0f1025"
                                    app:met_primaryColor="@color/text_divider_light"
                                    app:met_textColor="#FFFFFF"
                                    app:met_textColorHint="#f5f5f5"
                                    app:met_underlineColor="@color/text_divider" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageViedw"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />

                                <com.rey.material.widget.Button
                                    android:id="@+id/button_save_loc"
                                    style="@style/Material.Drawable.Ripple.Wave.Light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/black_but"
                                    android:drawableLeft="@drawable/save_ico"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="Save"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edittext_loc_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:hint="State"
                                android:imeActionId="@+id/edittext_loc_zip"
                                android:inputType="textPersonName"
                                android:paddingLeft="5dp"
                                android:paddingRight="10dp"
                                android:textSize="18sp"
                                app:met_accentTypeface="fonts/prox.otf"
                                app:met_baseColor="@color/text_divider_light"
                                app:met_floatingLabel="normal"
                                app:met_floatingLabelTextColor="#0f1025"
                                app:met_primaryColor="@color/text_divider_light"
                                app:met_textColor="#FFFFFF"
                                app:met_textColorHint="#f5f5f5"
                                app:met_underlineColor="@color/text_divider" />

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edittext_loc_zip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:hint="Zip"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="10dp"
                                android:textSize="18sp"
                                app:met_accentTypeface="fonts/prox.otf"
                                app:met_baseColor="@color/text_divider_light"
                                app:met_floatingLabel="normal"
                                app:met_floatingLabelTextColor="#0f1025"
                                app:met_primaryColor="@color/text_divider_light"
                                app:met_textColor="#FFFFFF"
                                app:met_textColorHint="#f5f5f5"
                                app:met_underlineColor="@color/text_divider" />

                        </LinearLayout>


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_loc_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"
                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="#0f1025"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="#FFFFFF"
                            app:met_textColorHint="#f5f5f5"
                            app:met_underlineColor="@color/text_divider" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edittext_loc_note"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="top|left"
                                android:hint="Delivery Note"
                                android:imeOptions="actionDone"
                                android:inputType="textMultiLine"
                                android:padding="1dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textSize="16sp"
                                app:met_accentTypeface="fonts/prox.otf"
                                app:met_baseColor="@color/text_divider_light"
                                app:met_floatingLabel="none"
                                app:met_floatingLabelTextColor="#0f1025"
                                app:met_hideUnderline="true"
                                app:met_primaryColor="@color/text_divider_light"
                                app:met_textColor="#FFFFFF"
                                app:met_textColorHint="#f5f5f5" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll213"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#000000">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/loc_wt_ico" />


                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_shd_txt_int"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="International Delivery Address"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />


                    <com.rey.material.widget.Button
                        android:id="@+id/button_add_int"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/black_but_add"
                        android:drawableLeft="@drawable/add_ico"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="Add"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="#ef8e25"
                        android:gravity="top">

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/checkbox_int"
                            style="@style/checkbox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/edittext_int_address1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Address Line 1"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:textSize="18sp"
                                    app:met_accentTypeface="fonts/prox.otf"
                                    app:met_baseColor="@color/text_divider_light"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="#0f1025"
                                    app:met_primaryColor="@color/text_divider_light"
                                    app:met_textColor="#FFFFFF"
                                    app:met_textColorHint="#f5f5f5"
                                    app:met_underlineColor="@color/text_divider" />

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/edittext_int_address2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="Address Line 2"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:textSize="18sp"

                                    app:met_accentTypeface="fonts/prox.otf"
                                    app:met_baseColor="@color/text_divider_light"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="#0f1025"
                                    app:met_primaryColor="@color/text_divider_light"
                                    app:met_textColor="#FFFFFF"
                                    app:met_textColorHint="#f5f5f5"
                                    app:met_underlineColor="@color/text_divider" />

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/edittext_int_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="City"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:textSize="18sp"

                                    app:met_accentTypeface="fonts/prox.otf"
                                    app:met_baseColor="@color/text_divider_light"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="#0f1025"
                                    app:met_primaryColor="@color/text_divider_light"
                                    app:met_textColor="#FFFFFF"
                                    app:met_textColorHint="#f5f5f5"
                                    app:met_underlineColor="@color/text_divider" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageViedws"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center_vertical|center_horizontal" />

                                <com.rey.material.widget.Button
                                    android:id="@+id/button_save_int"
                                    style="@style/Material.Drawable.Ripple.Wave.Light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/black_but"
                                    android:drawableLeft="@drawable/save_ico"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="Save"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edittext_int_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:hint="State"
                                android:imeOptions="actionNext"
                                android:inputType="textPersonName"
                                android:paddingLeft="5dp"
                                android:paddingRight="10dp"
                                android:textSize="18sp"
                                app:met_accentTypeface="fonts/prox.otf"
                                app:met_baseColor="@color/text_divider_light"
                                app:met_floatingLabel="normal"
                                app:met_floatingLabelTextColor="#0f1025"
                                app:met_primaryColor="@color/text_divider_light"
                                app:met_textColor="#FFFFFF"
                                app:met_textColorHint="#f5f5f5"
                                app:met_underlineColor="@color/text_divider" />

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edittext_int_zip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:hint="Zip"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="10dp"
                                android:textSize="18sp"
                                app:met_accentTypeface="fonts/prox.otf"
                                app:met_baseColor="@color/text_divider_light"
                                app:met_floatingLabel="normal"
                                app:met_floatingLabelTextColor="#0f1025"
                                app:met_primaryColor="@color/text_divider_light"
                                app:met_textColor="#FFFFFF"
                                app:met_textColorHint="#f5f5f5"
                                app:met_underlineColor="@color/text_divider" />

                        </LinearLayout>


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_int_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"
                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="#0f1025"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="#FFFFFF"
                            app:met_textColorHint="#f5f5f5"
                            app:met_underlineColor="@color/text_divider" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edittext_int_note"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="top|left"
                                android:hint="Delivery Note"
                                android:imeOptions="actionDone"
                                android:inputType="textMultiLine"
                                android:padding="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textSize="16sp"
                                app:met_accentTypeface="fonts/prox.otf"
                                app:met_baseColor="@color/text_divider_light"
                                app:met_floatingLabel="none"
                                app:met_floatingLabelTextColor="#0f1025"
                                app:met_hideUnderline="true"
                                app:met_primaryColor="@color/text_divider_light"
                                app:met_textColor="#FFFFFF"
                                app:met_textColorHint="#f5f5f5" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center">

        <com.rey.material.widget.Button
            android:id="@+id/button_next"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_reg_button"
            android:drawableRight="@drawable/arrow_ico"
            android:gravity="center|center_horizontal|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>


</RelativeLayout>