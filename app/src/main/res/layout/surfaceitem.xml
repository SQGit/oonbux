<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sample"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Bottom View Start-->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_delete"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:padding="@dimen/_24sdp"
            android:src="@drawable/del"/>

        <!--<com.rey.material.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/_18sdp"
            android:paddingBottom="@dimen/_18sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableRight="@drawable/ic_backspace_black_24dp"
            android:text="Delete"
            android:textSize="@dimen/_10sdp"
            android:textColor="#FFFFFF"
            android:background="@color/text_color"/>-->
        <!--What you want to show-->
    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingTop="@dimen/_4sdp">
        <!--What you want to show in Cart-->
        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_4sdp">


            <com.rey.material.widget.CheckBox
                android:id="@+id/cb_addto"
                style="@style/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/_8sdp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|end|center_vertical"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:alpha="5"
                    android:padding="@dimen/_3sdp"
                    android:rotation="90"
                    android:src="@drawable/down_ico" />


                <LinearLayout
                android:id="@+id/linearlayout"
                    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/cart_bg"
                android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp">


                    <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/imgview"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/photo_ico"
                    app:siBorderColor="@color/colorAccent"
                    app:siBorderWidth="0.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp">

                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_pickup_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:gravity="left"
                            android:text="Cart Id : "
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_15sdp" />

                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_pickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="left"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_size_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:gravity="left"
                            android:text="Size : "
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_15sdp" />

                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_23sdp"
                            android:gravity="left"
                            android:text="SMALL"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:gravity="left"
                            android:text="Price : "
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_15sdp" />

                        <com.rey.material.widget.TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:gravity="left"
                            android:text="$ 4.99"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_13sdp" />



                    </LinearLayout>


                </LinearLayout>


                </LinearLayout>

            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>