<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#070b23">

        <FrameLayout
            android:id="@+id/bck_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rey.material.widget.LinearLayout
                android:id="@+id/layout_back"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_ico" />
            </com.rey.material.widget.LinearLayout>

            <com.rey.material.widget.TextView
                android:id="@+id/tv_hd_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Choose Pal"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />


            <com.rey.material.widget.LinearLayout
                android:id="@+id/layout_add"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/button_add_pal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/lft_pal_ico" />
            </com.rey.material.widget.LinearLayout>


        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ll1"
        android:background="#e47b0a"
        android:gravity="center"
        android:orientation="horizontal">

        <com.rey.material.widget.EditText
            android:id="@+id/et_searchtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search"
            android:hint="Name or email or oonbux id"
            android:textColorHint="#070b23"
            android:textSize="18sp"
            app:et_dividerColor="@color/text_color_hint_light"
            app:et_dividerHeight="1dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="@color/text_color_hint_light"
            app:et_labelTextSize="12sp">

        </com.rey.material.widget.EditText>


        <com.rey.material.widget.Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/backo"
            android:text="Submit"
            android:textColor="@color/text_color_hint_light"
            android:textSize="16sp"
            android:theme="@style/Material.Drawable.Ripple.Wave" />


    </LinearLayout>




    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/button_next"
        android:layout_below="@+id/ll3"></FrameLayout>



    <com.rey.material.widget.Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/back_rt_ico"
        android:background="@drawable/login_reg_button"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color_hint_light"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:theme="@style/Material.Drawable.Ripple.Wave" />


</RelativeLayout>