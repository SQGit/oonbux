<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edittext_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Address Line 1"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        app:met_accentTypeface="fonts/prox.otf"
                        app:met_baseColor="@color/text_divider_light"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/hint_floating_dark"
                        app:met_primaryColor="@color/text_divider_light"
                        app:met_textColor="#FFFFFF"
                        app:met_textColorHint="#f5f5f5"
                        app:met_underlineColor="@color/text_divider" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edittext_address2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:hint="Address Line 2"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        app:met_accentTypeface="fonts/prox.otf"
                        app:met_baseColor="@color/text_divider_light"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/hint_floating_dark"
                        app:met_primaryColor="@color/text_divider_light"
                        app:met_textColor="#FFFFFF"
                        app:met_textColorHint="#f5f5f5"
                        app:met_underlineColor="@color/text_divider" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edittext_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Country"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        app:met_accentTypeface="fonts/prox.otf"
                        app:met_baseColor="@color/text_divider_light"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/hint_floating_dark"
                        app:met_primaryColor="@color/text_divider_light"
                        app:met_textColor="#FFFFFF"
                        app:met_textColorHint="#f5f5f5"
                        app:met_underlineColor="@color/text_divider" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edittext_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:hint="State"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        app:met_accentTypeface="fonts/prox.otf"
                        app:met_baseColor="@color/text_divider_light"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/hint_floating_dark"
                        app:met_primaryColor="@color/text_divider_light"
                        app:met_textColor="#FFFFFF"
                        app:met_textColorHint="#f5f5f5"
                        app:met_underlineColor="@color/text_divider" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edittext_zip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Zip"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        app:met_accentTypeface="fonts/prox.otf"
                        app:met_baseColor="@color/text_divider_light"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/hint_floating_dark"
                        app:met_primaryColor="@color/text_divider_light"
                        app:met_textColor="#FFFFFF"
                        app:met_textColorHint="#f5f5f5"
                        app:met_underlineColor="@color/text_divider" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edittext_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:hint="City"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        app:met_accentTypeface="fonts/prox.otf"
                        app:met_baseColor="@color/text_divider_light"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@color/hint_floating_dark"
                        app:met_primaryColor="@color/text_divider_light"
                        app:met_textColor="#FFFFFF"
                        app:met_textColorHint="#f5f5f5"
                        app:met_underlineColor="@color/text_divider" />
                </LinearLayout>


            </LinearLayout>



