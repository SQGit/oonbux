<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top"
    android:background="@drawable/bg_profile"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#070b23">

        <FrameLayout
            android:id="@+id/bck_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.rey.material.widget.LinearLayout
                android:id="@+id/layout_back"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_ico" />
            </com.rey.material.widget.LinearLayout>


            <com.rey.material.widget.TextView
                android:id="@+id/tv_hd_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Profile Info"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_22sdp" />


            <com.rey.material.widget.Button
                android:id="@+id/button_edit"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/login_reg_button"
                android:drawableLeft="@drawable/edit_ico"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Edit"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_18sdp" />
        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_below="@+id/ll1"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/nav_header_propic"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/photo_ico"
                android:padding="10dp"
                app:siBorderColor="@color/colorAccent"
                app:siBorderWidth="@dimen/_2sdp" />


            <ImageView
                android:id="@+id/img_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="@dimen/_45sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/cam_plus_ico" />


        </FrameLayout>


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/ll">

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:drawableRight="@drawable/lft_pro_ico"
                android:enabled="false"
                android:hint="Firstname"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/_19sdp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_color"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/lft_pro_ico"
                android:enabled="false"
                android:hint="Lastname"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/_19sdp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_color"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/email_ico"
                android:enabled="false"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"

                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/_19sdp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_color"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/mobile_ico"
                android:enabled="false"
                android:hint="Phone"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:paddingRight="13dp"
                android:textSize="@dimen/_19sdp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_color"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/zip_ico"
                android:enabled="false"
                android:hint="Zip"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/_19sdp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_color"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/state_ico"
                android:enabled="false"
                android:hint="State"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="12dp"
                android:textSize="@dimen/_19sdp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_color"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <com.rey.material.widget.Button
            android:id="@+id/button_submit"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/login_reg_button"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/arrow_ico"
            android:gravity="center|center_horizontal|center_vertical"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_22sdp" />
    </LinearLayout>

</RelativeLayout>