<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#121323"
        android:gravity="center|center_vertical|center_horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="25dp">

        <ImageView
            android:id="@+id/nav_header_propic"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/msg_ico" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Do you want to Logout App ?"
            android:textColor="#424242"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cont"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:layout_centerHorizontal="true">

            <com.rey.material.widget.Button
                android:id="@+id/button_yes"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_reg_button"
                android:layout_weight="1"
                android:text="Yes"
                android:layout_margin="15dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <com.rey.material.widget.Button
                android:id="@+id/button_no"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_reg_button"
                android:text="No"
                android:layout_margin="15dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>