<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dash">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#070b23">

        <FrameLayout
            android:id="@+id/bck_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.rey.material.widget.LinearLayout
                android:id="@+id/layout_back"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/back_ico" />
            </com.rey.material.widget.LinearLayout>


            <com.rey.material.widget.TextView
                android:id="@+id/tv_hd_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pal Request"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_22sdp" />


        </FrameLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/ll1"
        android:background="@color/text_color">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_shd_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="center"
            android:text="You have to accept or reject "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_13sdp">


        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/imgview"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/photo_ico"
            app:siBorderColor="@color/colorAccent"
            app:siBorderWidth="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:gravity="left"
                    android:text="Name : "
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_17sdp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="ANDY RODUS"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_19sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_oonbuxid_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="Oonbux Id : "
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_17sdp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_oonbuxid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="IB566FD33"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_19sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_mail_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="Email : "
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_17sdp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="rodusmail@oonbux.com"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_19sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="Phone : "
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_17sdp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="984546544"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_19sdp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_90sdp"
        android:orientation="horizontal">

        <com.rey.material.widget.Button
            android:id="@+id/button_accept"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_weight="1"
            android:background="@drawable/login_reg_button"
            android:drawableLeft="@drawable/pal_add_wt_ico"
            android:drawablePadding="@dimen/_4sdp"
            android:paddingLeft="@dimen/_18sdp"
            android:textSize="@dimen/_18sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="Accept"
            android:textColor="#FFFFFF" />


        <com.rey.material.widget.Button
            android:id="@+id/button_reject"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_18sdp"
            android:background="@drawable/login_reg_button"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableLeft="@drawable/close_ico"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="Reject"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_90sdp">


        <com.rey.material.widget.Button
            android:id="@+id/button_close"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_reg_button"
            android:paddingLeft="@dimen/_35sdp"
            android:paddingRight="@dimen/_35sdp"
            android:text="OK"
            android:textSize="@dimen/_20sdp"
            android:textColor="#FFFFFF" />

    </FrameLayout>


</RelativeLayout>