<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#070b23">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_ico" />


        <com.rey.material.widget.TextView
            android:id="@+id/tv_hd_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Physical Delivery Address"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/bg_dash"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll21"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#9a070b23">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_ico" />


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_hd_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Local Delivery Address"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cecf6d11"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_demail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Street"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"
                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="@color/hint_floating"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="@color/text_color"
                            app:met_textColorHint="@color/text_color_hint"
                            app:met_underlineColor="@color/text_divider" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_emdail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Apartment/Unit"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"

                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="@color/hint_floating"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="@color/text_color"
                            app:met_textColorHint="@color/text_color_hint"
                            app:met_underlineColor="@color/text_divider" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_edmaifl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Zipcode/State"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"

                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="@color/hint_floating"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="@color/text_color"
                            app:met_textColorHint="@color/text_color_hint"
                            app:met_underlineColor="@color/text_divider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:src="@drawable/photo_ico" />

                        <com.rey.material.widget.Button
                            android:id="@+id/button_login"
                            style="@style/Material.Drawable.Ripple.Wave.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/black_but"
                            android:drawableLeft="@drawable/save_ico"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Save"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edittext_edmail"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@drawable/border"
                    android:gravity="top|left"
                    android:hint="Delivery Note"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    app:met_accentTypeface="fonts/prox.otf"
                    app:met_baseColor="@color/text_divider_light"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="@color/hint_floating"
                    app:met_primaryColor="@color/text_divider_light"
                    app:met_textColor="@color/text_color"
                    app:met_textColorHint="@color/text_color_hint"
                    app:met_underlineColor="@color/text_divider" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lld21"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#9a070b23">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_ico" />


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_hdd_txtd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="International Delivery Address"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cecf6d11"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_dedmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Street"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"
                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="@color/hint_floating"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="@color/text_color"
                            app:met_textColorHint="@color/text_color_hint"
                            app:met_underlineColor="@color/text_divider" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_demdail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Apartment/Unit"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"

                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="@color/hint_floating"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="@color/text_color"
                            app:met_textColorHint="@color/text_color_hint"
                            app:met_underlineColor="@color/text_divider" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_edmdaifl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Zipcode/State"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:textSize="18sp"

                            app:met_accentTypeface="fonts/prox.otf"
                            app:met_baseColor="@color/text_divider_light"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelTextColor="@color/hint_floating"
                            app:met_primaryColor="@color/text_divider_light"
                            app:met_textColor="@color/text_color"
                            app:met_textColorHint="@color/text_color_hint"
                            app:met_underlineColor="@color/text_divider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:src="@drawable/photo_ico" />

                        <com.rey.material.widget.Button
                            android:id="@+id/button_login"
                            style="@style/Material.Drawable.Ripple.Wave.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/black_but"
                            android:drawableLeft="@drawable/save_ico"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Save"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edittext_eddmail"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@drawable/border"
                    android:gravity="top|left"
                    android:hint="Delivery Note"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    app:met_accentTypeface="fonts/prox.otf"
                    app:met_baseColor="@color/text_divider_light"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="@color/hint_floating"
                    app:met_primaryColor="@color/text_divider_light"
                    app:met_textColor="@color/text_color"
                    app:met_textColorHint="@color/text_color_hint"
                    app:met_underlineColor="@color/text_divider" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>