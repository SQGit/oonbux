<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color">@color/text_divider</item>
        <item name="android:popupBackground">@color/text_color</item>
    </style>


    <style name="img_Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/myTheme.actionBar</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="actionBarSize">@dimen/iwf_actionBarSize</item>
    </style>


    <style name="myTheme.actionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/text_color_hint_light</item>
        <item name="actionBarSize">@dimen/iwf_actionBarSize</item>
    </style>


    <style name="EditTextCustomHolo" parent="android:Widget.EditText">

        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="spin2" parent="Material.Widget.Spinner.Light">
        <item name="rd_style">@style/wave1</item>
        <item name="spn_labelEnable">true</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_labelTextColor">@color/text_color</item>
        <item name="spn_arrowSize">8dp</item>
        <item name="spn_arrowPadding">5dp</item>
        <item name="spn_labelTextSize">12sp</item>
        <item name="spn_dividerHeight">1dp</item>
        <item name="spn_dividerColor">@color/text_color_hint_light</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_arrowColor">@color/text_color</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">120</item>
        <item name="android:popupBackground">@color/text_color_hint_light</item>
    </style>

    <style name="wave1" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_maxRippleRadius">48dp</item>
        <item name="rd_rippleColor">#70d6246b</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_rippleType">wave</item>
    </style>

    <style name="radio" parent="radiob">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="checkbox" parent="chkbox">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="checkbox1">
        <item name="cbd_width">25dp</item>
        <item name="cbd_height">25dp</item>
        <item name="cbd_boxSize">24dp</item>
        <item name="cbd_cornerRadius">1dp</item>
        <item name="cbd_strokeColor">@color/text_color_hint_light</item>
        <item name="cbd_strokeSize">1.5dp</item>
        <item name="cbd_tickColor">@color/text_color</item>
        <item name="cbd_animDuration">@android:integer/config_mediumAnimTime</item>
    </style>


    <style name="chkbox">
        <item name="cbd_width">32dp</item>
        <item name="cbd_height">32dp</item>
        <item name="cbd_boxSize">25dp</item>
        <item name="cbd_cornerRadius">1dp</item>
        <item name="cbd_strokeColor">@color/text_color</item>
        <item name="cbd_strokeSize">1dp</item>
        <item name="cbd_tickColor">@color/text_color_hint_light</item>
        <item name="cbd_animDuration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="radiob">
        <item name="rbd_width">32dp</item>
        <item name="rbd_height">32dp</item>
        <item name="rbd_strokeSize">3dp</item>
        <item name="rbd_radius">10dp</item>
        <item name="rbd_strokeColor">@color/text_color</item>
        <item name="rbd_innerRadius">6dp</item>
        <item name="rbd_animDuration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="style_me">
        <item name="android:popupMenuStyle">@color/text_color</item>
    </style>


</resources>
