            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="18sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="#0f1025"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="#FFFFFF"
                app:met_textColorHint="#f5f5f5"
                app:met_underlineColor="@color/text_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edittext_note"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="top|left"
                    android:hint="Delivery Note"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:padding="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:et_supportSingleLine="true"
                    app:met_accentTypeface="fonts/prox.otf"
                    app:met_baseColor="@color/text_divider_light"
                    app:met_floatingLabel="none"
                    app:met_floatingLabelTextColor="#0f1025"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/text_divider_light"
                    app:met_textColor="#FFFFFF"
                    app:met_textColorHint="#f5f5f5" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>