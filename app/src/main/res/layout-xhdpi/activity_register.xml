<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF24263E"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_img" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/edittext_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/country_ico"
                android:hint="Country"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:imeOptions="actionNext"
                android:textSize="20sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/email_ico"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/pass_ico"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_repass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/pass_ico"
                android:hint="Retype Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/phone_ico"
                android:hint="Phone No"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/zip_ico"
                android:hint="Zipcode"
                android:inputType="phone"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/state_ico"
                android:hint="State"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                app:met_accentTypeface="fonts/prox.otf"
                app:met_baseColor="@color/text_divider_light"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/hint_floating"
                app:met_primaryColor="@color/text_divider_light"
                app:met_textColor="@color/text_color"
                app:met_textColorHint="@color/text_color_hint"
                app:met_underlineColor="@color/text_divider" />


            <com.rey.material.widget.Button
                android:id="@+id/button_submit"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_reg_button"
                android:drawableRight="@drawable/arrow_ico"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/linear_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/text_dont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Already have an Account?"
                    android:textColor="#FFFFFF" />

                <com.rey.material.widget.TextView
                    android:id="@+id/text_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" Login"
                    android:textColor="#d97810" />
            </LinearLayout>

            <com.rey.material.widget.TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/terms"
                android:textColor="#e0e0e0"
                android:textSize="10sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>