<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#070b23">

        <LinearLayout
            android:id="@+id/bck_layout"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_ico" />
        </LinearLayout>


        <com.rey.material.widget.TextView
            android:id="@+id/tv_hd_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Invite Pal to Setup"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/ll1"
        android:background="#e47b0a">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_shd_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Invite your Pal to Setup an oonbux virtual package \n Delivery Address"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll2"
        android:background="@drawable/bg_dash">

        <com.rey.material.widget.ListView
            android:id="@+id/lview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.rey.material.widget.ListView>

    </LinearLayout>

</RelativeLayout>